    "version": "0.2.0",
    "configurations": [
        {
            "name": "Atach Air",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "debugAdapter": "dlv-dap",
            "port": 2345,
            "host": "localhost",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "args": ["--config", "${workspaceFolder}/configs/dev/config.dev.yaml"],
            "env": {}
        }
    ]
}
